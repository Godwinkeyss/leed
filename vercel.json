{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/app.py"
      }
    ],
    "env": {
      "MY_ENV_VARIABLE": "value",
      "DATABASE_URL": "sqlite:///patients.db",
      "SECRET_KEY": "your_secret_key_here"
    },
    "static": {
      "directory": "public"
    }
  }
  